<% include ./partials/header %>

<div class="row">
	<div class="col-md-12">
		<h1>
			Reset password
		</h1>
	
		
		<form action="/forgot" method="POST">
			<div class="form-group">
				<label for="password">Password:</label>
				<input autofocus="autofocus" class="form-control" type="password" name="password" id="password" placeholder="New password" value="">
			</div>
			<div class="form-group">
				<label for="confirm">Confirm:</label>
				<input class="form-control" type="password" name="confirm" id="confirm" placeholder="Confirm password" value="">
			</div>
			<div class="form-group">
				<button type="submit" class="btn btn-primary">Update Password</button>
			</div>
				
		</form>
		
	</div>
</div>
